


<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
            </div>
            <!-- /.col -->
            <div class="col-sm-6"></div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card card-primary" id="ListDiv">
    <div class="card-header">
        <h3 class="card-title">لیست دسته بندی محصولات</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">

        <hr />
        <div class="row">
            <div class="form-group">
                <label for="input-search" class="control-label">جستجو:</label>
                <input type="input" class="form-control" id="input-search" placeholder="برای جستجو تایپ کنید" value="">
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div id="treeview1" class=""></div>
            </div>
            <div class="col-sm-6">
                <div class="selectedmenu" style="display: none;">
                    <strong>دسته انتخابی :</strong>
                    <p id="lblMenuName"></p><br />
                    <div class="row">
                        <button type="button" id="btnAdd" class="btn btn-success "><i class="fa fa-plus"></i>&nbsp; افزودن زیر دسته</button> &nbsp;&nbsp;&nbsp;
                        <button type="button" id="btnEdit" class="btn btn-primary"><i class="fa fa-edit"></i>&nbsp; ویرایش</button> &nbsp;&nbsp;&nbsp;
                        <button type="button" id="btnRemove" class="btn btn-danger "><i class="fa fa-trash"></i>&nbsp; حذف</button>&nbsp;&nbsp;&nbsp;
                        <button type="button" id="btnAddParams" class="btn btn-warning "><i class="fa fa-book"></i>&nbsp; افزودن پارامتر</button>
                    </div>
                </div>
                <div class="nonselectedmenu">
                    <p>برای افزودن زیردسته و ویرایش و حذف دسته ای را انتخاب کنید.</p><br />
                    <div class="row">
                        <button type="button" id="btnAddMain" class="btn btn-success "><i class="fa fa-plus"></i>&nbsp; افزودن دسته</button> &nbsp;&nbsp;&nbsp;
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-body -->
</div>


<div class="card card-success" id="EditDiv" style="display: none;">
    <div class="card-header">
        <h3 class="card-title">ثبت و ویرایش</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 form-group">
                <label for="txtName" class="control-label">نام:</label>
                <input type="text" class="form-control" id="txtName" placeholder="نام" />
            </div>
            <div class="col-md-3 form-group">
                <label for="txtCodding" class="control-label">کدینگ:</label>
                <input type="number" class="form-control" id="txtCodding" min="100" max="999" placeholder="کدینگ" />
            </div>
            <div class="col-md-3 form-group">
                <label for="txtMetaData" class="control-label">عنوان متا دیتا:</label>
                <input type="text" class="form-control" id="txtMetaData" placeholder="عنوان متا دیتا" />

            </div>
        </div>
        <div class="row">
            <div class="form-group form-control">
                <label for="txtMetadesc" class="control-label">توضیحات متا دیتا:</label>
                <textarea dir="rtl" rows="5" class="form-control" id="txtMetadesc"></textarea>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label>کلمات کلیدی(با "،" جدا شوند) :</label>
                <input id="txtkeyword" type="text" class="form-control" placeholder="کلمه کلیدی">
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 form-group text-center">
                <img class="img-thumbnail" width="200" height="200" id="imgIcon" alt="آیکون"/>
            </div>
            <div class="col-md-4 form-group text-center">
                <img class="img-thumbnail" width="200" height="200" id="imgCover" alt="کاور"/>
            </div>
            <div class="col-md-4 form-group text-center">
                <img class="img-thumbnail" width="200" height="200" id="imgMiniPic" alt="تصویر کوچک" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 form-group">
                <label for="exampleInputFile">آیکون :</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="exampleInputFile">
                        <label class="custom-file-label btn btn-info" id="exampleInputFilelbl" for="exampleInputFile">انتخاب تصویر</label>
                    </div>

                </div>
            </div>
            <div class="col-md-4 form-group">
                <label for="exampleInputFile">کاور :</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="exampleInputFile1">
                        <label class="custom-file-label btn btn-info" id="exampleInputFile1lbl" for="exampleInputFile1">انتخاب تصویر</label>
                    </div>

                </div>
            </div>
            <div class="col-md-4 form-group">
                <label for="exampleInputFile">تصویر کوچک :</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="exampleInputFile2">
                        <label class="custom-file-label btn btn-info" id="exampleInputFile2lbl" for="exampleInputFile1">انتخاب تصویر</label>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="card-footer text-center">
        <button type="button" id="btnSabt" class="btn btn-success w-25"><i class="fa fa-check"></i>&nbsp; ثبت</button>
        <button type="button" class="btn btn-warning w-25" id="btnBazgasht"><i class="fa fa-remove"></i>&nbsp; انصراف</button>
    </div>
</div>

<div class="card card-success" id="ParametersDiv" style="display: none;">
    <div class="card-header">
        <h3 class="card-title">لیست پارامتر ها</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <hr>

            <div class="col-sm-6">
                <div id="treeview-checkable" class=""></div>
            </div>
            <div class="col-sm-6">
                <button type="button" id="btnAddparams" class="btn btn-success "><i class="fa fa-plus"></i>&nbsp; ثبت انخاب شده ها</button> &nbsp;&nbsp;&nbsp;
                <button type="button" id="btncloseparam" class="btn btn-warning"><i class="fa fa-remove"></i>&nbsp; بازگشت</button> &nbsp;&nbsp;&nbsp;
            </div>

        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/bootstrap-treeview.js"></script>
    <script src="~/FormScripts/CatProduct.js"></script>

}
